{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": ".",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@eslint-stylistic/metadata": [
        "./packages/metadata/src/index.ts"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.mts",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue"
  ]
}
